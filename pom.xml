<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>io.openshift</groupId>
    <artifactId>booster-parent</artifactId>
    <version>22</version>
  </parent>

  <groupId>io.openshift.booster</groupId>
  <artifactId>spring-boot-istio-distributed-tracing-parent</artifactId>
  <version>1.5.14-1-SNAPSHOT</version>
  <packaging>pom</packaging>

  <name>Spring Boot - Istio Distributed Tracing Booster</name>
  <description>Spring Boot - Istio Distributed Tracing Booster</description>

  <properties>
    <openjdk18-openshift.version>1.3</openjdk18-openshift.version>
    <opentracing-jaeger-starter.version>0.1.10</opentracing-jaeger-starter.version>
    <spring-boot-bom.version>1.5.14.Beta1</spring-boot-bom.version>
    <spring-boot.version>1.5.14.RELEASE</spring-boot.version>

    <fabric8.generator.from>
      registry.access.redhat.com/redhat-openjdk-18/openjdk18-openshift:${openjdk18-openshift.version}
    </fabric8.generator.from>

    <java.version>1.8</java.version>

    <skip.fmp>true</skip.fmp>

    <!-- Default values  / used when no profile is activated-->
    <greeting-service.port>8090</greeting-service.port>
    <cute-name-service.port>8091</cute-name-service.port>
    <cute-name-service.endpoint>localhost:8091</cute-name-service.endpoint>

    <jaeger.endpoint>http://localhost:14268/api/traces</jaeger.endpoint>
  </properties>

  <licenses>
    <license>
      <name>Apache License, Version 2.0</name>
      <url>https://www.apache.org/licenses/LICENSE-2.0.txt</url>
      <distribution>repo</distribution>
      <comments>A business-friendly OSS license</comments>
    </license>
  </licenses>

  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>me.snowdrop</groupId>
        <artifactId>spring-boot-bom</artifactId>
        <version>${spring-boot-bom.version}</version>
        <type>pom</type>
        <scope>import</scope>
      </dependency>
      <dependency>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-thymeleaf</artifactId>
        <version>${spring-boot.version}</version>
      </dependency>
      <dependency>
        <groupId>io.opentracing.contrib</groupId>
        <artifactId>opentracing-spring-cloud-starter-jaeger</artifactId>
        <version>${opentracing-jaeger-starter.version}</version>
      </dependency>
    </dependencies>
  </dependencyManagement>

  <modules>
    <module>spring-boot-istio-distributed-tracing-greeting-service</module>
    <module>spring-boot-istio-distributed-tracing-cute-name-service</module>
  </modules>

  <build>
    <resources>
      <resource>
        <directory>src/main/resources</directory>
        <filtering>true</filtering>
      </resource>
    </resources>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.springframework.boot</groupId>
          <artifactId>spring-boot-maven-plugin</artifactId>
          <version>${spring-boot.version}</version>
        </plugin>
      </plugins>
    </pluginManagement>
    <plugins>
      <plugin>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-maven-plugin</artifactId>
        <configuration>
          <profiles>
            <profile>development</profile>
          </profiles>
          <classifier>exec</classifier>
        </configuration>
        <executions>
          <execution>
            <goals>
              <goal>repackage</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

  <profiles>
    <profile>
      <id>openshift</id>
      <properties>
        <!-- Override properties / used when deploying to Openshift -->
        <greeting-service.port>8080</greeting-service.port>
        <cute-name-service.port>8080</cute-name-service.port>

        <cute-name-service.endpoint>
          spring-boot-istio-distributed-tracing-cute-name-service:8080
        </cute-name-service.endpoint>

        <jaeger.endpoint>http://jaeger-collector.istio-system.svc:14268/api/traces</jaeger.endpoint>
      </properties>
      <build>
        <plugins>
          <plugin>
            <groupId>io.fabric8</groupId>
            <artifactId>fabric8-maven-plugin</artifactId>
            <executions>
              <execution>
                <goals>
                  <goal>resource</goal>
                  <goal>build</goal>
                </goals>
              </execution>
            </executions>
            <configuration>
              <skip>${skip.fmp}</skip>
              <resources>
                <annotations>
                  <deployment>
                    <property>
                      <name>sidecar.istio.io/inject</name>
                      <value>true</value>
                    </property>
                  </deployment>
                  <service>
                    <property>
                      <name>auth.istio.io/8080</name>
                      <value>NONE</value>
                    </property>
                  </service>
                </annotations>
              </resources>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
</project>
